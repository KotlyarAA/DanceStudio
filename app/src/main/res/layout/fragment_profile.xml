<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profileScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDFD"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="?android:attr/dividerHorizontal"
        android:showDividers="middle"
        android:dividerPadding="8dp">

        <!-- Email и Выйти -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etUserEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="email@example.com"
                android:background="@drawable/bg_edittext"
                android:padding="12dp"
                android:enabled="false"
                android:textColor="#333"
                android:textStyle="bold"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Выйти"
                android:textColor="#B71C1C"
                android:backgroundTint="#FDE8E8"
                android:layout_marginStart="12dp" />
        </LinearLayout>



        <!-- Логотип -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dance Studio"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#B71C1C"
            android:background="@drawable/bg_outline_red"
            android:padding="8dp"
            android:layout_gravity="center" />



        <!-- Описание -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:text="Мы — команда профессиональных хореографов и преданных своему делу преподавателей, которые верят, что танец доступен каждому.\n\nНаша студия — это уютное пространство для самовыражения, роста и движения к лучшему «я»."
            android:textColor="#333"
            android:textSize="15sp"
            android:layout_marginBottom="16dp" />

        <!-- Фото -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/dance_group_photo"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_card" />

        <!-- Направления -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="У нас вы найдёте:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#5A3E36"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_outline_red"
            android:padding="16dp"
            android:textColor="#5A3E36"
            android:textSize="14sp"
            android:text="• Занятия для детей и взрослых с любым уровнем подготовки\n• Направления: хип-хоп, джаз-фанк, контемпорари, стретчинг и другое\n• Уютную атмосферу, современный зал и индивидуальный подход\n• Регулярные мастер-классы, выступления и участие в конкурсах"
            android:layout_marginBottom="16dp" />

        <!-- Приглашение -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:text="Присоединяйтесь к нашему танцевальному сообществу и раскройте свой потенциал вместе с нами!"
            android:textColor="#333"
            android:textSize="15sp"
            android:layout_marginBottom="16dp" />

        <!-- Контакты -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📍 АДРЕС\nг. Москва, ул. Лобачевского 24\n\n⏰ ВРЕМЯ РАБОТЫ\nЕжедневно 11:00–22:00\n\n📞 ТЕЛЕФОН\n+7(978)-714-70-06\n\n✉️ ПОЧТА\nKotlyar2006@gmail.com"
            android:textColor="#444"
            android:textSize="14sp" />
    </LinearLayout>
</ScrollView>
